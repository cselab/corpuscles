. he.util

prog=he.m4

: ${M4=m4}

usg () {
cat >&2 <<EOF
$prog [OPTION]... [FILE]...
he m4 wrapper
EOF
    exit
}

if test $# -ne 0 && test "$1" = -h; then usg; fi

include="%include%"

if ! test -d "$include"
then msg "no '$include' dierecoty"
fi

for i
do shift
   set -- "$@" \'"$i"\'
done

e "$M4" -I"$include" "$@"
