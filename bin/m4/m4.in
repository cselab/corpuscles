. he.util

prog=he.m4

: ${M4=m4}

usg () {
cat >&2 <<EOF
$prog [-o output] [M4 OPTION]... [FILE]...
he m4 wrapper
EOF
    exit
}

if test $# -ne 0 && test "$1" = -h; then usg; fi

include="%include%"

if ! test -d "$include"
then msg "no '$include' dierecoty"
fi

inc () { expr $1 + 1; }

i=0 n=$# Output=
until test $i -ge $n
do case "$1" in
       -o) shift; i=`inc $i`
	   if test $i -eq $n; then err '-o needs an argument'; fi
	   Output="$1"
	   shift; i=`inc $i` ;;
       *) set -- "$@" "$1"
	  shift; i=`inc $i` ;;
   esac
done

for i
do shift
   set -- "$@" \'"$i"\'
done

if test x$Output = x
then
    e "$M4" -I"$include" "$@"
    if test $? -ne 0; then err failed; fi
else
    t=/tmp/he.m4.$$
    trap 'rm -f $t; exit 1' 1 2 3 4 15
    e "$M4" -I"$include" "$@" > $t
    if test $? -ne 0; then err failed; fi
    mv 2>/dev/null $t "$Output"
    if test $? -ne 0; then err "fail to create '$Output'"; fi
fi
