. he.util

prog=he.shake
: ${h=1e-6}

usg () {
    msg "$prog command [argument]"
    msg 'compute finite difference with step = '$h
    exit
}

if test $# -ne 0 && test "$1" = -h; then usg; fi

zero () {
    echo "$i" | sed 's,%,,g'
}

plus () {
    local x
    x=`zero $i`
    ae $x + $h
}

for i
do shift
   case $i in
       %*) i=`plus $i`
   esac
   set -- "$@" "$i"
done

echo "$@"

