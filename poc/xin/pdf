find example/min/helfrich_xin_explore -name '*.gp' | while read l
do if awk '{sub(/#.*/, "")} /set.*output.*eps/{ F = 1 } END {exit(!F)}' $l
   then
       awk '
/^set term postscript/ {
    print "set term pdfcairo enhanced color fontscale 0.7"
    next
}

/^set.*output.*eps/ {
    sub(/\.eps"$/, ".pdf\"")
    print
    next
}
1
' "$l" > /tmp/t.$$
       mv /tmp/t.$$ $l
   fi
done
